(deftemplate money_counter (slot amount))

(deffacts  initial-facts (money_counter (amount 0)))


(defrule check_not_enough_money (money_counter (amount ?amount))
?f1 <-(money_counter (amount ?amount))
(test (= ?amount 15 ) )
=>	
(printout t "NOT ENOUGH FUNDS ADD QUATER" crlf)
(bind ?added (read))
(if(= ?added 25))
then 
(bind ?total(+ ?amount ?added))
(modify ?f1( amount ?total))
(printout t "TOTAL AMOUNT: " ?total " c")
)
